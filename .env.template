# Karnataka Power Outage Forecasting System - Environment Configuration
# Copy this file to .env and add your real API keys

# Weather API Keys (Required for real-time weather data)
OPENWEATHER_API_KEY=your_openweather_api_key_here
WEATHERAPI_KEY=your_weatherapi_key_here

# Database Configuration
DATABASE_URL=sqlite:///./karnataka_outages.db
POSTGRES_URL=postgresql://user:password@localhost:5432/karnataka_outages

# Model Configuration
MODEL_PATH=models/karnataka_outage_model.joblib
BACKUP_MODEL_PATH=models/karnataka_outage_model_backup.joblib

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=False

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/karnataka_api.log

# Karnataka Specific Settings
DEFAULT_PREDICTION_HOURS=24
MAX_PREDICTION_HOURS=48
WEATHER_UPDATE_INTERVAL_MINUTES=30
MODEL_RETRAIN_INTERVAL_DAYS=7

# ESCOM Zone Settings
BESCOM_PRIORITY_CITIES=bangalore,tumkur
CHESCOM_PRIORITY_CITIES=mysore,davangere,shimoga
HESCOM_PRIORITY_CITIES=hubli,dharwad,belgaum,bijapur
MESCOM_PRIORITY_CITIES=mangalore
GESCOM_PRIORITY_CITIES=gulbarga,bellary

# Weather Thresholds for Alerts
HIGH_WIND_THRESHOLD_KMH=60
HEAVY_RAIN_THRESHOLD_MM=50
HIGH_LIGHTNING_RISK_THRESHOLD=4
EXTREME_TEMP_HIGH_CELSIUS=42
EXTREME_TEMP_LOW_CELSIUS=8

# Notification Settings (Optional)
ENABLE_EMAIL_ALERTS=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Monitoring & Analytics (Optional)
ENABLE_PERFORMANCE_MONITORING=True
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
